#:import settingsDropDownList Main.SettingsDropDownList

<MainWidget>:
    orientation: 'vertical'

    # Top part of the screen containing informations about number of bombs left,
    # current time, button for restart and button with drop down settings
    FloatLayout:
        canvas:
            Color:
                rgba: 0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'horizontal'
        size_hint_y: None
        height: 60

        # Contains information about amount of bombs left
        Label:
            canvas.before:
                Color:
                    rgba: 0.2 , 0.2, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: root.number_of_bombs

            font_size: 40
            size_hint: None, None
            size: self.texture_size[0] + 10, self.texture_size[1]
            pos: 20, self.parent.center[1] - (self.height/2)

        # Restart Button
        Button:
            pos: self.parent.center[0] - self.width/2, self.parent.center[1] - (self.height/2)
            text: 'R'
            font_size: 40
            size_hint: None, None
            size: 40, 40

        # Shows current time of game
        Label:
            canvas.before:
                Color:
                    rgba: 0.2 , 0.2, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            text: '000'
            font_size: 40
            size_hint: None, None
            size: self.texture_size[0] + 10, self.texture_size[1]
            pos: self.parent.right - self.width - 20, self.parent.center[1] - (self.height/2)

        # Settings button with dropdown list
        Button:
            id: SettingsButton
            pos: 120, self.parent.center[1] - (self.height/2)
            text: 'Settings'
            font_size: 30
            size_hint: None, None
            size: self.texture_size[0] + 10, 40

    BoxLayout:
        orientation: 'vertical'
        id: Game_Panel


<SettingsDropDownList>:
    # for changing number of bombs
    Button:
        text: 'Easy'
        font_size: 20
        size_hint_y: None
        height: 30
        on_release: root.change_difficulty(self.text)
    Button:
        text: 'Normal'
        font_size: 20
        size_hint_y: None
        height: 30
        on_release: root.change_difficulty(self.text)
    Button:
        text: 'Hard'
        font_size: 20
        size_hint_y: None
        height: 30
        on_release: root.change_difficulty(self.text)


<Tile>:
    Image:
        source: 'Images\\NTile.png'
        size: self.parent.size
        pos: self.parent.pos
